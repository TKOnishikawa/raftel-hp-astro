  inset: 0;
  background: linear-gradient(180deg,
    rgba(11,11,18,0.9) 0%,
    rgba(11,11,18,0.95) 50%,
    rgba(11,11,18,1) 100%
  );
  z-index: 1;
}

.hero-content {
  position: relative;
  z-index: 10;
  text-align: center;
  padding: 0 24px;
  max-width: 900px;
}

.hero-title {
  font-family: var(--font-ja);
