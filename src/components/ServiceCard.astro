---
interface Props {
  title: string
  description: string
  price: string
  href: string
  image: string
  icon: string
  tag: string
  delay?: number
}

const { title, description, price, href, image, icon, tag, delay = 0 } = Astro.props
const revealClass = delay > 0 ? `reveal reveal-delay-${delay}` : 'reveal'
---

<a href={href} class={`service-card ${revealClass}`}>
  <div class="service-card-thumb" style={`background-image: url('${image}'); background-color: #1a2530;`}>
    <div class="service-card-thumb-overlay"></div>
    <span class="service-card-thumb-inner">{tag}</span>
    <div class="service-card-thumb-icon" set:html={icon} />
  </div>
  <div class="service-card-body">
    <span class="service-card-tag">{tag}</span>
    <h2 class="service-card-title">{title}</h2>
    <p class="service-card-desc">{description}</p>
    <div class="service-card-meta">
      <span set:html={price} />
      <span class="service-card-link">
        View details
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </span>
    </div>
  </div>
</a>

<style is:global>
.service-card {
  background: #fff;
  border: 1px solid var(--border);
  border-radius: 16px;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.16,1,0.3,1);
  box-shadow: var(--shadow-sm);
  display: flex;
  flex-direction: column;
  text-decoration: none;
  color: inherit;
}

.service-card:hover {
  transform: translateY(-6px);
  box-shadow: var(--shadow-lg);
  border-color: var(--border-accent);
}

.service-card-thumb {
  height: 200px;
  background: var(--bg-dark);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: cover;
  background-position: center;
}

.service-card-thumb-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(11,11,18,0.3) 0%, rgba(11,11,18,0.7) 100%);
  z-index: 0;
  transition: background 0.4s;
}

.service-card:hover .service-card-thumb-overlay {
  background: linear-gradient(180deg, rgba(11,11,18,0.2) 0%, rgba(11,11,18,0.6) 100%);
}

.service-card-thumb-inner {
  font-family: var(--font-head);
  font-size: 3rem;
  font-weight: 800;
  color: rgba(255,255,255,0.08);
  position: relative;
  z-index: 1;
  letter-spacing: 0.04em;
  text-align: center;
  pointer-events: none;
}

.service-card-thumb-icon {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 2;
  color: var(--accent);
  opacity: 0.9;
}

.service-card-body {
  padding: 28px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.service-card-tag {
  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--accent);
  font-family: var(--font-en);
  margin-bottom: 12px;
  display: inline-block;
}

.service-card-title {
  font-family: var(--font-ja);
  font-size: 1.25rem;
  font-weight: 700;
  line-height: 1.5;
  margin-bottom: 16px;
  color: var(--text-dark);
}

.service-card-desc {
  font-size: 0.9rem;
  line-height: 1.8;
  color: var(--text-body);
  margin-bottom: 20px;
  flex: 1;
}

.service-card-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20px;
  border-top: 1px solid var(--border);
  font-size: 0.88rem;
}

.service-card-meta > span:first-child {
  font-weight: 600;
  color: var(--text-dark);
}

.service-card-link {
  color: var(--accent);
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 6px;
  font-family: var(--font-en);
  font-size: 0.82rem;
  letter-spacing: 0.02em;
  transition: gap 0.3s;
}

.service-card:hover .service-card-link {
  gap: 10px;
}

.service-card-link svg {
  transition: transform 0.3s;
}

.service-card:hover .service-card-link svg {
  transform: translateX(3px);
}
</style>
